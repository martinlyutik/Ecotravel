<Window x:Class="Tour.Managers.Functions.DeleteTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour.Managers.Functions"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Closing="ClosingButton"
        Title="Удалить заявку" Height="210" Width="414">
    <Grid Background="#FFF5F5F7">
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="192,69,0,0" VerticalAlignment="Top" Height="30" Background="#FF08D27B" Foreground="#FFF5F5F7" FontWeight="Medium" Width="120" Click="DeleteTicket_Click"/>
        <ComboBox x:Name="Ticket" HorizontalAlignment="Left" Margin="110,69,0,0" VerticalAlignment="Top" Width="78" BorderBrush="#FFFFFCD6" Height="30">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FFFFFCD6" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label Content="Id:" HorizontalAlignment="Left" Margin="80,69,0,0" VerticalAlignment="Top" Width="25" Height="30"/>

    </Grid>
</Window>
